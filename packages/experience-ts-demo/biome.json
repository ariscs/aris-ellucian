{
	"$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false,
		"defaultBranch": "main"
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": []
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"ignore": ["node_modules/**/*"],
		"indentWidth": 2
	},
	"organizeImports": {
		"enabled": true,
		"include": ["src/**/*.{js,jsx,ts,tsx}"]
	},
	"linter": {
		"enabled": false,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"indentStyle": "tab",
			"indentWidth": 4,
			"lineWidth": 80,
			"trailingCommas": "none"
		}
	}
}
